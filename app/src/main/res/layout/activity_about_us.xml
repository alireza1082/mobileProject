<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">    
    
<TextView android:id="@+id/aboutUsTextTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle= "bold"
    android:textSize="24sp"
    android:text="@string/aboutUsTextTitle"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:fontFamily="@font/ir_sans"
    android:layout_marginTop="40dp"/>

<TextView android:id="@+id/aboutUsText"
    android:layout_width="200sp"
    android:textSize="16sp"
    android:textAlignment="center"
    android:layout_height="wrap_content"
    android:text="@string/aboutUsText"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/aboutUsTextTitle"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:fontFamily="@font/ir_sans"
    />


</androidx.constraintlayout.widget.ConstraintLayout>
